@page "/Error"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="">Error.</h1>
<h2 class="">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<p>
    <a asp-page="/Index/Index">Back to Home</a>
</p>